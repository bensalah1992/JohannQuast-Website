---
// src/pages/aktuelles.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const heroProps = {
  backgroundImage: "/images/aktuelles-hero.jpg",
  logo: "/images/aktuelles.svg" // Logo für den Hero-Bereich
};

const newsPosts = [
  {
    title: "Neue saisonale Produkte verfügbar",
    date: "15. Oktober 2023",
    description: `
      Ab sofort haben wir frische, saisonale Produkte aus der Region im Sortiment! 
      Erfahren Sie mehr über die aktuellen Verfügbarkeiten und besondere Angebote.
    `,
    imageUrl: "/images/intro.jpg"
  },
  {
    title: "Erweiterung unserer Liefergebiete",
    date: "5. September 2023",
    description: `
      Wir haben unsere Liefergebiete erweitert! Ab jetzt beliefern wir auch die umliegenden Regionen. 
      Kontaktieren Sie uns für Details und Liefermöglichkeiten.
    `,
    imageUrl: "/images/intro.jpg"
  },
  {
    title: "Nachhaltigkeit im Fokus",
    date: "12. August 2023",
    description: `
      Bei Johann Quast legen wir großen Wert auf Nachhaltigkeit. Erfahren Sie, wie wir unsere Prozesse umweltfreundlicher gestalten.
    `,
    imageUrl: "/images/intro.jpg"
  }
];
---

<BaseLayout title="Aktuelles">
  <!-- Hero-Bereich für Aktuelles-Seite -->
  <section class="news-hero" style={`background-image: url(${heroProps.backgroundImage})`}>
    <div class="hero-content">
      <img src={heroProps.logo} alt="News Logo" class="hero-logo" />
    </div>
  </section>

  <!-- Nachrichten und Updates in Kartenansicht -->
  <section class="news-section">
    {newsPosts.map((post) => (
      <div class="news-card">
        <img src={post.imageUrl} alt={post.title} class="news-image" />
        <div class="news-content">
          <h2>{post.title}</h2>
          <p class="news-date">{post.date}</p>
          <p>{post.description}</p>
        </div>
      </div>
    ))}
  </section>
</BaseLayout>

<style>
/* Hero-Bereich */
.news-hero {
  height: 60vh;
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  text-align: center;
  position: relative;
}

.hero-content {
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.6);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.hero-logo {
  width: 600px;
  max-width: 100%;
  margin-bottom: 1rem;
}

.news-hero h1 {
  font-size: 2.5rem;
  font-weight: bold;
}

/* Nachrichtenbereich */
.news-section {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
  justify-content: center;
  padding: 4rem 2rem;
  background-color: #f9f9f9;
}

.news-card {
  background-color: white;
  border-radius: 10px;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  max-width: 350px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.news-card:hover {
  transform: translateY(-5px);
  box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
}

.news-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.news-content {
  padding: 1.5rem;
  text-align: left;
}

.news-content h2 {
  font-size: 1.5rem;
  color: #00652c;
  margin-bottom: 0.5rem;
}

.news-date {
  font-size: 0.9rem;
  color: #999;
  margin-bottom: 1rem;
}

.news-content p {
  font-size: 1rem;
  color: #333;
}
</style>