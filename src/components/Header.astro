---
// Header.astro
import Navigation from './Navigation.astro';
---

<header class="header">
  <div class="logo">
    <a href="/">
      <img src="/images/logo.svg" alt="Johann-Quast-Logo">
    </a>
  </div>
  <Navigation />
</header>

<style>
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 80px;
  background: linear-gradient(90deg, rgba(249, 249, 249, 0.8), rgba(249, 249, 249, 0.6));
  color: #333;
  position: sticky;
  top: 0;
  z-index: 1000;
  backdrop-filter: blur(15px);
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
}

.logo img {
  height: 45px;
  transform: scale(4.5);
  transform-origin: center;
  margin-top: 10px;
}
</style>