---
// Navigation.astro
const navItems = [
  { href: '/about', title: 'Ãœber Uns' },
  { href: '/service', title: 'Service' },
  { href: '/aktuelles', title: 'Aktuelles' },
  { href: '/jobs', title: 'Jobs' },
  { href: '/kontakt', title: 'Kontakt' },
];
---

<nav class="navigation">
  <ul>
    {navItems.map(item => (
      <li class="nav-item">
        <a href={item.href}>{item.title}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
.navigation ul {
  display: flex;
  gap: 30px;
  list-style: none;
  padding: 0;
  margin: 0;
}

.nav-item {
  padding: 0 10px;
  position: relative;
}

.nav-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 70%;
  width: 1px;
  background-color: #ddd;
}

.navigation a {
  font-family: 'Roboto', sans-serif;
  color: #333;
  text-decoration: none;
  font-weight: 600;
  font-size: 1.1rem;
  display: block;
  padding: 10px 15px;
  border-radius: 4px;
  transition: background-color 0.3s ease, color 0.3s ease, text-decoration 0.3s ease;
}

.navigation a:hover {
  background-color: #00652c;
  color: #ffeedc;
  text-decoration: underline;
}
</style>